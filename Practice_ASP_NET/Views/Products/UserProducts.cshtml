@model Practice_ASP_NET.Models.User
<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Products" class="btn btn-info form-control text-white">
            Add New Product
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Weight</th>
                    <th>Amount</th>
                    <th>Manufacturer</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script>
    var id = @Model.Id;
    </script>
    <script src="~/js/userProductList.js"></script>
}
